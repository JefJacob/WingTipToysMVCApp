@model IEnumerable<WingTipToys.DTO.ProductDTO>
@{
    ViewData["Title"] = "Cars - Wingtip Toys";
}

<form action="Cars" id="ctl01" method="post" name="ctl01">
    <header>
        <div class="pagewrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="/" id="A2">
                        <img id="Logo" src="images/logo.jpg" style="border-style: None;">
                    </a>
                </p>
            </div>
        </div>
    </header>

    <div id="body">
        <section class="featured">
            <div class="pagewrapper">
                <hgroup class="title">
                    <h1>Products</h1>
                </hgroup>

                <section class="featured">
                    <div style="margin-left: 2em">
                        <table>
                            <tbody>
                                <tr>
                                    <td style="width: 30%;vertical-align:top;">
                                        <hgroup class="title">
                                            <h1>Wingtip Toys</h1>
                                            <h2>Wingtip Toys can help you find the perfect gift</h2>
                                        </hgroup>
                                        <p>
                                            We're all about transportation toys. You can order
                                            any of our toys today. Each toy listing has detailed
                                            information to help you choose the right toy.
                                        </p>
                                    </td>
                                    <td>
                                        <table>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            <img class="product-image" src="images/@Html.DisplayFor(modelItem => item.ImagePath)">
                                                        </td>
                                                        <td>
                                                            <input type="hidden" value="@Html.DisplayFor(modelItem => item.ProductId)" />
                                                            @Html.DisplayFor(modelItem => item.ProductName)
                                                            <br>
                                                            <span class="ProductPrice">
                                                                <strong>Price:</strong>
                                                                $@Html.DisplayFor(modelItem => item.UnitPrice)
                                                            </span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </section>
            </div>
        </section>
    </div>
</form>

